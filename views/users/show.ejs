  <div class="routine center-text">
    <h2 style="text-decoration: underline; margin: 0"><%= r.title %></h2>
    <!-- <ul>
    <% r.exercises.forEach(function(e) { %> 
    <li><span><%= e.exercise %></span><br /><%= e.sets %> sets / <%= e.reps %> reps </li>
    <% }) %>
    </ul> -->
    <a href="/routines/<%= r._id %>">View Exercises</a>
  </div>
  <% }) %>
</div>
<% } %> <%- include('../partials/footer') %>
